
public class CountSetBits {
	public static void main(String[] args) {
		System.out.println("100 : " + countSetBitsNaive(100));
		System.out.println("100 : " + countSetBits2(100));
		System.out.println("100 : " + brianKernighanAlgo(100));
	}

	private static int brianKernighanAlgo(int n) {
		int cnt = 0;
		while(n > 0) {
			n = n & (n-1);
			cnt++;
		}
		return cnt;
	}

	private static int countSetBits2(int n) {
		int cnt = 0;
		while(n != 0) {
			if((n & 1) != 0)	
				cnt++;
			// OR
//			cnt += (n&1);
			n = n >> 1;
		}
		return cnt;
	}

	private static int countSetBitsNaive(int n) {
		int cnt = 0;
		while(n != 0) {
			cnt += n%2;
			n /= 2;
		}
		return cnt;
	}
}
